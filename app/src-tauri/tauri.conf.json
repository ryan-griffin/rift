{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Rift",
	"version": "0.1.0",
	"identifier": "com.rift.app",
	"build": {
		"beforeDevCommand": "deno task dev",
		"beforeBuildCommand": "deno task build",
		"devUrl": "http://localhost:3000",
		"frontendDist": "../.output"
	},
	"app": {
		"windows": [
			{
				"title": "Rift",
				"width": 800,
				"height": 600,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": []
	}
}
